<h2>Search Books</h2>
<form action="/books" method="GET">
  <div>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= searchOptions.title %>">
  </div>
  <div>
    <label for="publishedAfter">Published After</label>
    <input type="date" id="publishedAfter" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
  </div>
  <div>
    <label for="publishedBefore">Published Before</label>
    <input type="date" id="publishedBefore" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
  </div>
  <button type="submit">Search</button>
</form>
<% books.forEach(book => { %>
  <a href="/books/<%= book.id %>">
    <img height="150" width="100" src="<%= book.dataURL %>" alt="<%= book.title %>">
  </a>
<% }); %>
